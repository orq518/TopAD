<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="Theme.BackgroundTranslucent" parent="android:Theme.Translucent">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 编辑框的样式 -->
    <style name="ucf_editor_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/editor_height</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_nopress</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/editor_hint_color</item>
    </style>

    <style name="ucf_btn_red_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_btn_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/common_btn_red</item>
    </style>

    <style name="ucf_btn_red_borad_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_btn_height</item>
        <item name="android:textColor">@color/red_main_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/common_btn_border_red</item>
    </style>

    <style name="ucf_btn_gray_borad_style">
        <item name="android:layout_width">match_parent</item>
